{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "lib/types",
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "lib",
        "skipLibCheck": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "../node_modules"]
}
